{
  "compilerOptions": {
    "strict": true,
    "target": "ES2020",
    "module": "Node16",
    "outDir": "../../dist-electron",
    "skipLibCheck": true,
    "moduleResolution": "Node16",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "composite": true,
    "declaration": true,
    "rootDir": "../"
  },
  "include": [
    "./**/*.ts", 
    "main.ts",
    "../shared/types/**/*.ts"
  ]  
}